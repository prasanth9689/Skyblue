<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.account.MyProfileActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            app:tint="@color/black"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/id_back"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/profile"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Prasanth"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <Button
            android:id="@+id/add_mobile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/ubuntu"
            android:background="@drawable/btn_follow"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Add number"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prasanthcena968@gmail.com"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Male"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="30-04-1997"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="India"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing account"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Not enabled"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account type"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Normal user"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium plan"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Not activated"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/ubuntu"/>


    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/profile_con"
        android:layout_width="match_parent"
        android:layout_below="@id/top"
        android:layout_marginStart="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_iVEdit_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/edit"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_iVEdit_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/edit"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/id_iVEdit_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_lock_black"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/gender"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_dob"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/gender"
            android:layout_alignParentEnd="false"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="5dp"
            android:text="@string/date_of_birth"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_mobile"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/dob"
            android:layout_alignParentEnd="false"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="5dp"
            android:text="@string/mobile_number"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/gender_text"
            android:layout_alignParentEnd="false"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="10dp"
            android:text="@string/gender"
            android:textColor="#818181"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/text_dob"
            android:layout_alignParentEnd="false"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="10dp"
            android:text="@string/dob"
            android:textColor="#818181"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/id_mobile_hidden_star"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/text_mobile"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/dots"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="invisible"
            tools:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>