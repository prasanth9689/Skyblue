<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cover_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.account.AccountActivity">

    <RelativeLayout
        android:id="@+id/cover_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cover_con_2"
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <ImageView
                android:id="@+id/cover_image_view"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:background="#E6E6E6"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cover_image" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_con"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp">

            <ImageView
                android:id="@+id/profile_image_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/placeholder_person"
                android:contentDescription="@string/profile_image" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/cover_con_2"
            android:layout_marginStart="65dp"
            android:background="@drawable/ic_ac_round_circle">

            <ImageView
                android:id="@+id/open_gallery"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_add_photo"
                android:contentDescription="@string/open_gallery" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover_con_2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/user_name_pfview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_below="@id/user_name_pfview"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Channel Name"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ubuntu_medium"
                    android:layout_marginTop="1dp"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/arrow_back"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:tint="@color/black"
            android:contentDescription="@string/back" />

        <RelativeLayout
            android:id="@+id/Rel_update_cover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:id="@+id/add_cover_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_ac_round_circle">

                <ImageView
                    android:id="@+id/change_cover"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_ac_create"
                    app:tint="@color/white"
                    android:contentDescription="@string/cover_image" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

