    <LinearLayout
        android:id="@+id/id_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:layout_below="@id/cover_con"
        android:layout_marginTop="10dp" >
        <!--        My profile         -->
        <RelativeLayout
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/click_effect">
            <ImageView
                android:id="@+id/my_ac_profile_img"
                android:src="@drawable/ic_user_account"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/cover_image" />

            <TextView
                android:id="@+id/my_ac_profile_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/my_ac_profile_img"
                android:fontFamily="@font/ubuntu_medium"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="@string/my_profile"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_ac_profile_des_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_ac_profile_main_text"
                android:layout_alignStart="@+id/my_ac_profile_main_text"
                android:maxLines="1"
                android:text="@string/edit_your_profile"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp" />
        </RelativeLayout>

        <!--        My channel         -->
        <RelativeLayout
            android:id="@+id/my_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect"
            android:padding="8dp">
            <ImageView
                android:id="@+id/my_channel_img"
                android:src="@drawable/ic_user_channel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/my_videos" />

            <TextView
                android:id="@+id/my_channel_main_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/my_channel_img"
                android:fontFamily="@font/ubuntu_medium"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="@string/my_channel"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/my_channel_des_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_channel_main_text"
                android:layout_alignStart="@+id/my_channel_main_text"
                android:maxLines="1"
                android:text="@string/manage_channels_and_playlist"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp" />

        </RelativeLayout>
        <!--        My videos         -->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/my_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect"
            android:padding="8dp">
            <ImageView
                android:id="@+id/my_videos_img"
                android:src="@drawable/ic_ac_video_library"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/my_videos" />

            <TextView
                android:id="@+id/my_videos_main_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/my_videos_img"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="@string/my_videos"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/my_videos_des_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_videos_main_text"
                android:layout_alignStart="@+id/my_videos_main_text"
                android:maxLines="1"
                android:text="@string/manage_uploaded_videos"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp" />
        </RelativeLayout>
        <!--        My photos         -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect"
            android:padding="8dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/my_photos_img"
                android:src="@drawable/ic_account_photos_library"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/photos" />

            <TextView
                android:id="@+id/my_photos_main_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/my_photos_img"
                android:maxLines="1"
                android:text="@string/my_photos"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/my_photos_des_text"
                android:text="@string/manage_uploaded_photos"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_photos_main_text"
                android:layout_alignStart="@+id/my_photos_main_text" />
        </RelativeLayout>
        <!--        Settings         -->
        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect"
            android:padding="8dp">
            <ImageView
                android:id="@+id/settings_img"
                android:src="@drawable/ic_user_settings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/settings" />

            <TextView
                android:id="@+id/settings_main_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/settings_img"
                android:maxLines="1"
                android:text="@string/settings"
                android:fontFamily="@font/ubuntu_medium"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/settings_des_text"
                android:text="@string/language_privacy_and_policy"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_main_text"
                android:layout_alignStart="@+id/settings_main_text" />
        </RelativeLayout>
<!--        Log out         -->
        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect"
            android:padding="8dp">
            <ImageView
                android:id="@+id/logout_img"
                android:src="@drawable/ic_user_logout_sharp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/logout" />

            <TextView
                android:id="@+id/logout_main_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/logout_img"
                android:maxLines="1"
                android:fontFamily="@font/ubuntu_medium"
                android:textStyle="bold"
                android:text="@string/logout"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/logout_des_text"
                android:text="@string/click_to_logout_now"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_light"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout_main_text"
                android:layout_alignStart="@+id/logout_main_text" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>