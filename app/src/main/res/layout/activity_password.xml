<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.registration.PasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_set_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginStart="20dp"
            android:text="@string/set_password"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorMessageBackground"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPass1"
            style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_set_pass"
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_login"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPass2"
            style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPass1"
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_login"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPass2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@color/colorMessageBackground"
            android:fontFamily="@font/ubuntu"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>